<%= form_with(model: bookmark, local: false) do |form| %>
  <% if bookmark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

      <ul>
        <% bookmark.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="field">
    <%= form.label :kind_id %>
    <%= form.select :kind_id, @kinds.map { |a| [a.name, a.id]} %>

  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select :category_id, @categories.map { |a| [a.name, a.id] } %>
  </div>

  <div class="actions">
    <%= form.submit data: {confirm: 'Quiere crear un marcador'} %>
  </div>
<% end %>
